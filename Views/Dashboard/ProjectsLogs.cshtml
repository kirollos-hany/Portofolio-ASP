@{
    Layout = "_DashboardLayout";
}
@model ProjectsLogsVM
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body bg">
                    <h4 class="card-title">Projects Logs</h4>
                    <div class="table-responsive">
                      <table class="table bg">
                        <thead>
                          <tr>
                            <th>Title</th>
                            <th>Creator</th>
                            <th>Action</th>
                            <th>Action By</th>
                            <th>Created</th>
                          </tr>
                        </thead>
                        <tbody>
                          @if(Model.Logs != default(ICollection<ProjectLog>))
                            {
                                    @foreach(var log in Model.Logs)
                                    {
                                      <tr class="clickable-bg">
                                            <td>@log.Title</td>
                                            <td>@log.CreatorName</td>
                                            <td>@log.Action</td>
                                            <td>@log.UserName</td>
                                            <td>@log.CreatedAt.ToString(DateTimeFormat)</td>
                                      </tr>
                                    }
                            }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
@{
    Layout = "_DashboardLayout";
}
@model ServiceDetailsDashboardVM
<!--Start Profile Card-->
<div class="page-content page-container container" id="page-content">
  <div class="padding container">
    <div class="row justify-content-center h-100">
      <div class="col-xl-12 col-md-12">
        <div class="card user-card-full">
          <div class="row m-l-0 m-r-0">
            <div class="col-sm-4">
              <div class="card-block text-center text-white">
                <div class="m-b-25">
                  <img class="img-fluid" src="~/@Model.Service.ServiceImage" alt="Profile Img" />
                </div>
                <h6 class="f-w-600 dark">@Model.Service.ServiceName</h6>
                <i class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16 clickable service-edit dark" data-toggle="modal"
                                        data-target="#editServiceModal" service-id="@Model.Service.Id" service-name="@Model.Service.ServiceName" service-description="@Model.Service.ServiceDescription"></i>
                <a asp-action="delete" asp-controller="services" asp-route-id="@Model.Service.Id" class="mdi mdi-delete-forever clickable dark" is-delete="1">
                            </a>
              </div>
            </div>
            <div class="col-sm-8">
              <div class="card-block">
                <div class="row">
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600 dark">Description</p>
                    <h6 class="text-muted f-w-400">
                      @Model.Service.ServiceDescription
                    </h6>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 <!-- Modal HTML Markup -->
<div id="editServiceModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title text-xs-center">Edit Service</h4>
      </div>
      <div asp-validation-summary="All"></div> 
        @if(TempData[ResultMessageKey] != null)
        {
          ResultMsgViewModel resultVM = TempData.GetResultMessage();
          <div class="modal-header">
          <div class="@resultVM.CssClass">@resultVM.Message</div>
          </div>
        }
      <div class="modal-body">
        <form role="form" id="editServiceForm" asp-action="Edit" asp-controller="Services" enctype="multipart/form-data" method="post">
        <div class="form-group">
          <label>Service Name</label>
          <input type="hidden" asp-for="Id">
          <input type="text" class="form-control" asp-for="Name" value="@Model.Service.ServiceName">
          <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea asp-for="Description" class="form-control" value="@Model.Service.ServiceDescription"></textarea>
          <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
          <label>Image</label>
          <input type="file" accept ="image/*" asp-for="ServiceImage">
          <span class="text-danger" asp-validation-for="ServiceImage"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        </form>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
@{
    await Html.RenderPartialAsync("_ServiceCrudPartial");
    await Html.RenderPartialAsync("_DeleteBtnPartial");
}
<!--End Profile Card-->
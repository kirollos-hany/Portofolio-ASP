@{
  Layout = "";
  ViewData[TitleKey] = "ResetPassword";
}
@model ResetPasswordViewModel

<!DOCTYPE html>
<html>
<head>
  <title>@ViewData[TitleKey]</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!--===============================================================================================-->
  <link rel="icon" type="image/png" href="~/img/icons/favicon.ico" />
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
  <!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="~/css/util.css">
  <link rel="stylesheet" type="text/css" href="~/css/main2.css">
  <!--===============================================================================================-->
</head>
<body>
  <div class="limiter">
    <div class="container-login100">
      <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
        <form class="login100-form validate-form flex-sb flex-w" asp-action="ResetPassword" asp-controller="User">
          <div asp-validation-summary="All"></div> 
        @if(TempData[ResultMessageKey] != null)
        {
          ResultMsgViewModel resultVM = TempData.GetResultMessage();
          <div class="modal-header">
          <div class="@resultVM.CssClass">@resultVM.Message</div>
          </div>
        }
          <span class="login100-form-title p-b-32"> Forgot Password </span>
          <span class="txt1 p-b-11"> Email </span>
          <div class="wrap-input100 validate-input m-b-36" data-validate="Email is required">
            <input class="input100" type="text" asp-for="Email" />
            <span class="focus-input100" asp-validation-for="Email"></span>
          </div>
          <div class="flex-sb-m w-full p-b-48">
            <div>
              <a asp-action="login" asp-controller="User" class="txt3">Login</a>
            </div>
          </div>
          <div class="container-login100-form-btn">
            <button class="login100-form-btn" type="submit">Reset</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!--===============================================================================================-->
  <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
  <!--===============================================================================================-->
  <script src="~/vendor/animsition/js/animsition.min.js"></script>
  <!--===============================================================================================-->
  <script src="~/vendor/bootstrap/js/popper.js"></script>
  <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
  <!--===============================================================================================-->
  <script src="~/vendor/select2/select2.min.js"></script>
  <!--===============================================================================================-->
  <script src="~/vendor/daterangepicker/moment.min.js"></script>
  <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
  <!--===============================================================================================-->
  <script src="~/vendor/countdowntime/countdowntime.js"></script>
  <!--===============================================================================================-->
  <script src="~/js/main2.js"></script>
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
</body>
</html>
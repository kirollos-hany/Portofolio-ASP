@{
    ViewData["Title"] = "Services";
}
@model List<Service>
<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">

                </h1>
                <p class="text-white link-nav"><a asp-controller="home" asp-action="index">Home </a> <span
                        class="lnr lnr-arrow-right"></span>
                    <a asp-controller="home" asp-action="services">@ViewData["Title"]</a>
                </p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start events-list Area -->
<section class="events-list-area section-gap event-page-lists" style="padding: 60px 0;">
    @if (Model.Count != 0)
    {
        @foreach (Service service in Model)
        {
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 pb-30">
                        <div class="single-carusel row align-items-center">
                            <div class="col-12 col-md-6 thumb">
                                <img class="img-fluid" src="~/img/events/e1.jpg" alt="">
                            </div>
                            <div class="detials col-12 col-md-6">
                                <h4>@service.ServiceName</h4>
                                <p>@service.ServiceDescription</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</section>
<!-- End events-list Area -->

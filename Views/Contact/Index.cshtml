@{
    ViewData["Title"] = "Contact";
}
@model Contact

<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Contact Us
                </h1>
                <p class="text-white link-nav"><a asp-action="index" asp-controller="home">Home </a> <span
                        class="lnr lnr-arrow-right"></span>
                    <a asp-action="contact" asp-controller="home"> @ViewData["Title"] Us</a>
                </p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->

<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            <iframe id="map" class="map-wrap" style="width:100%; height: 445px;"
                src="https://maps.google.com/maps?q=faculty%20of%20computer%20and%20information%20helwan&t=&z=15&ie=UTF8&iwloc=&output=embed"
                frameborder="0" style="border:0" allowfullscreen></iframe>
            <div class="col-lg-4 d-flex flex-column address-wrap">
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-home"></span>
                    </div>
                    <div class="contact-details">
                        <h5>Faculty of Computer&Information, Helwan Universty</h5>
                        <p>
                            2nd floor
                        </p>
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-phone-handset"></span>
                    </div>
                    <div class="contact-details">
                        <h5>0114 655 5025</h5>
                        <p>Always Open</p>
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-envelope"></span>
                    </div>
                    <div class="contact-details">
                        <h5>ieee.fcih@gmail.com</h5>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <form class="form-area contact-form text-right" id="myForm" asp-controller="contact"
                    asp-action="SubmitContact">
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <input placeholder="Enter your name" onfocus="this.placeholder = ''"
                                onblur="this.placeholder = 'Enter your name'" class="common-input mb-20 form-control"
                                required="" type="text" asp-for="ContactName">
                            <span asp-validation-for="ContactName"></span>
                            <input placeholder="Enter email address" onfocus="this.placeholder = ''"
                                onblur="this.placeholder = 'Enter email address'"
                                class="common-input mb-20 form-control" required="" type="email" asp-for="Email">
                            <span asp-validation-for="Email"></span>
                            <input placeholder="Enter phone number" onfocus="this.placeholder = ''"
                                onblur="this.placeholder = 'Enter phone number'" class="common-input mb-20 form-control"
                                required="" type="tel" asp-for="Phone">
                            <span asp-validation-for="Phone"></span>
                        </div>
                        <div class="col-lg-6 form-group">
                            <textarea class="common-textarea form-control" placeholder="Enter Messege"
                                onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Messege'" required=""
                                asp-for="Message"></textarea>
                            <span asp-validation-for="Message"></span>
                        </div>
                        <div class="col-lg-12">
                            <div class="alert-msg" style="text-align: left;"></div>
                            <button class="genric-btn primary" style="float: right;">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End contact-page Area -->

<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    @ViewData["BannerTitle"]
                </h1>
                <p class="text-white link-nav"><a asp-action="index" asp-controller="home">Home </a> <span
                        class="lnr lnr-arrow-right"></span>
                        @if (ViewData["BannerNavRouteValue"] != null)
                        {
                            <a asp-action=@ViewData["BannerNavAction"] asp-controller=@ViewData["BannerNavController"] asp-route-id=@ViewData["BannerNavRouteValue"]> @ViewData["BannerNavTitle"]</a>
                        }else{
                            <a asp-action=@ViewData["BannerNavAction"] asp-controller=@ViewData["BannerNavController"]> @ViewData["BannerNavTitle"]</a>
                        }
                    
                </p>
            </div>
        </div>
    </div>
</section>
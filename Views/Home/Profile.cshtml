@{
    ViewData[TitleKey] = "Profile";
    ViewData[BannerTitleKey] = "Profile";
    ViewData[BannerNavTitleKey] = "Members";
    ViewData[BannerNavActionKey] = "members";
    ViewData[BannerNavControllerKey] = "home";
}
@model User
<!--Start Profile Card-->
<div class="page-content page-container container" id="page-content">
  <div class="padding container">
    <div class="row justify-content-center h-100">
      <div class="col-xl-12 col-md-12">
        <div class="card user-card-full">
          <div class="row m-l-0 m-r-0">
            <div class="col-sm-4 bg-c-lite-green user-profile">
              <div class="card-block text-center text-white">
                <div class="m-b-25">
               @if(Model.ImagePath.StartsWith('~'))
                {
                  var imgSrc = @Url.Content(Model.ImagePath);
                  <img class="img-fluid rounded-circle" src="@imgSrc" alt="Profile Img" />
                }else
                {
                  <img class="img-fluid rounded-circle" src="~/user/profileimage/@Model.Id" alt="Profile Img" />
                }
                </div>
                <h6 class="f-w-600">@Model.UserName</h6>
                <p>@Model.Specialization</p>
              </div>
            </div>
            <div class="col-sm-8">
              <div class="card-block">
                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                <div class="row">
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Email</p>
                    <h6 class="text-muted f-w-400">
                      @Model.Email
                    </h6>
                  </div>
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Phone</p>
                    <h6 class="text-muted f-w-400">@Model.PhoneNumber</h6>
                  </div>
                </div>
                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">
                  Projects
                </h6>
                <div class="row">
                  <div class="col-sm-6">
                    @if (Model.UsersInProjects.Count != 0)
                    {
                      foreach (var userInProject in Model.UsersInProjects)
                      {
                        <a asp-action="details" asp-controller="projects" asp-route-id="@userInProject.ProjectId">
                          <h6 class="text-muted f-w-400">@userInProject.Project.Title - @userInProject.Role.Role</h6>
                        </a>
                      }
                    }
                  </div>
                </div>
                <ul class="social-link list-unstyled m-t-40 m-b-10">
                  <li>
                    @if (Model.UserLinks.Count != 0)
                    {
                      @foreach (var ul in Model.UserLinks)
                      {
                        if(ul.Link != null && ul.Link != "#")
                        {
                        <a href="@ul.Link" target="_blank" data-toggle="tooltip" data-placement="bottom" title=""
                        data-original-title="facebook" data-abc="true"><i
                          class="@ul.Type.IconClass" aria-hidden="true"></i></a>
                        }
                      }
                    }
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--End Profile Card-->
@{
    ViewData[TitleKey] = "Developers";
    ViewData[PaginationCurrentPage] = Model.PaginationModel.CurrentPage;
    ViewData[PaginationMaxPageCount] = Model.PaginationModel.MaxPageCount;
    ViewData[PaginationDisplayCount] = Model.PaginationModel.DisplayCount;
    ViewData[BannerTitleKey] = "Developers";
}
@model DevelopersViewModel
    @{
      await Html.RenderPartialAsync("_ShortBanner");
    }
        <!-- Start popular-courses Area --> 
			<section class="popular-courses-area section-gap courses-page">
				<div class="container">						
					<div class="row">	
						@if(Model.PaginationModel.Collection != default(ICollection<User>))
							{
								foreach(var user in Model.PaginationModel.Collection)
								{
									<div class="single-popular-carusel col-lg-3 col-md-6">
										<div class="thumb-wrap relative">
											<div class="thumb relative">
												<div class="overlay overlay-bg"></div>	
                        <a asp-action="profile" asp-controller="home" asp-route-id="@user.Id">
                          <img class="img-fluid" src="~/@user.ImagePath" alt="User image">
                        </a>
											</div>
										</div>
										<div class="details">
											<a>
												<h4>
													@user.UserName 
												</h4>
											</a>
											<p>@user.Specialization<br>
											Joined : @user.CreatedAt.ToString(DateFormat)
											</p>
										</div>
									</div>
								}
							}											
					</div>
				</div>	
    @{
        await Html.RenderPartialAsync("_PaginationPartial");
    }
			</section>